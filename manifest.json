{
  "manifest_version": 3,
  "name": "Focus Mode - No Reels No Distractions",
  "version": "1.0.0",
  "description": "Remove distracting content from social media. Hide Reels, Stories, Home Feed, and notification badges. Stay focused and productive while browsing.",
  "author": "mkshaonexe",
  "homepage_url": "https://github.com/mkshaonexe/Facebook_NO_Distraction",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Focus Mode - No Distractions"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "*://*.facebook.com/*"
  ]
}


