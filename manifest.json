{
  "manifest_version": 3,
  "name": "Facebook Reels Blocker - No Distraction",
  "version": "0.0.9",
  "description": "Hide Facebook Reels across the site except on the dedicated /reels page.",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "FB Reels/Stories/Videos Blocker"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "*://*.facebook.com/*"
  ]
}


